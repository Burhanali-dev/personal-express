<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Rapper Database</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Rapper Database</h1>
  <div class="row">

    <form action="/saveArtistInfo" method="post">
        <div class="form-group">
            <label>Stage Name </label>
            <input type="text" class="form-control" name="name">
        </div>
        <div class="form-group">
            <label>Real Name</label>
            <input type="text" class="form-control" name="realname">
        </div>
        <div class="form-group">
            <label>Highest Charting Billboard Top 100</label>
            <input type="text" class="form-control" name="biggestsong">
        </div>
        <div class="form-group">
            <label>Record Label</label>
            <input type="text" class="form-control" name="artistlabel">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Submit</button>
    </form>

  <ul class="rapper">
  <% for(var i=0; i<rapperDatabase.length; i++) {%>
    <li class="rapArray">
      <span><%= rapperDatabase[i].name %></span>
      <span><%= rapperDatabase[i].realname %></span>
      <span><%= rapperDatabase[i].biggestsong %></span> 
      <span><%= rapperDatabase[i].artistlabel %></span>
      <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>
  <script type="text/javascript" src="/main.js"></script>
</body>
</html>






